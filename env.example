# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=football_ai_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_DIALECT=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Football-Data.org API
FOOTBALL_API_KEY=0c2c9ff406194e7fa8878e79bb237d5f
FOOTBALL_API_BASE_URL=https://api.football-data.org/v4
FOOTBALL_API_RATE_LIMIT=10

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ML Model Configuration
ML_MODEL_PATH=./models
ML_TRAINING_DATA_PATH=./data/training
ML_PREDICTION_THRESHOLD=0.6

# Cron Jobs
CRON_UPDATE_MATCHES=0 */6 * * *  # Every 6 hours
CRON_UPDATE_STANDINGS=0 2 * * *  # Daily at 2 AM
CRON_CLEANUP_OLD_DATA=0 3 * * 0  # Weekly on Sunday at 3 AM

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Production Settings
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=
